<div class="flex items-center justify-between mt-5 float-right mr-4">
    <a href="/home/<%= item[0].id %>/sockets/create" class="hover:bg-blue-400 group flex items-center rounded-md bg-indigo-700 text-white text-sm font-medium pl-2 pr-3 py-2 shadow-sm">
        <svg width="20" height="20" fill="currentColor" class="mr-2" aria-hidden="true">
          <path d="M10 5a1 1 0 0 1 1 1v3h3a1 1 0 1 1 0 2h-3v3a1 1 0 1 1-2 0v-3H6a1 1 0 1 1 0-2h3V6a1 1 0 0 1 1-1Z" />
        </svg>
        New
      </a></div>

<div class="m-4">
<% for(let i = 0; i<sockets.length; i++){ %>
    <div class="border-solid border-2 border-gray-600 rounded-lg inline-block p-4 ml-2 mt-1.5">
        <p>название <%= sockets[i].name_sockets %></p>
        <% if(sockets[i].value == 0){ %>
            <p>Cтатус: Выключено</p>
            <form action="/home/<%=item[0].id %>/sockets/edit" method="post">
                <input type="hidden" value="<%= sockets[i].id %>" name="id">
                <input type="hidden" value="1" name="value">
                <input type="submit" value="Включить" class="block ml-auto mb-1 mr-auto mt-2 h-7 px-4 font-semibold rounded-md border border-slate-200 text-slate-900 hover:text-white hover:bg-indigo-700">
            </form>
        <% }else{ %>
            <p>Cтатус: Включено</p>
            <form action="/home/<%=item[0].id %>/sockets/edit" method="post">
                <input type="hidden" value="<%= sockets[i].id %>" name="id">
                <input type="hidden" value="0" name="value">
                <input type="submit" value="Выключить" class="block ml-auto mb-1 mr-auto mt-2  h-7 px-4 font-semibold rounded-md border border-slate-200 text-slate-900 hover:text-white hover:bg-indigo-700">
            </form>
        <% } %>
    </div>
<% } %>
</div>

